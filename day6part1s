#day 6 part 1 - orbital maps
# with open("dd6p1_input.txt","r") as f:
with open("dd6p1_ex.txt","r") as f:
	pairs =[]
	orbiters = []
	orbited = []
	for line in f:
		for pair in line.split():
				pairs.append(pair.split(")"))
				pair = pair.split(")")
				ed, er = pair[0],pair[1]
				orbited.append(ed)
				orbiters.append(er)

	def next_index(orbited,ed):
		start_at = -1
		checked_lines= []
		while True:
			try: 
				line_check=orbited.index(ed,start_at+1)
			except ValueError:
				break
			else:
				checked_lines.append(line_check)
				start_at=line_check
		return checked_lines

	def g(pairs, ed):
		if ed in orbited:
			checked_lines=next_index(orbited,ed)
			for a in checked_lines:
				er = pairs[a][1]
				list_a.append(er)
				ed = er
				g(pairs,ed)
					
	ed, er = pairs[0][0], pairs[0][1]
	
	list_a = [ed]	
	for ed in orbited:
		g(pairs,ed)
		
	num_orbits2 =0
	for x in range(len(list_a)-1):
		num_orbits2 = num_orbits2+x
	print(num_orbits2)
		
